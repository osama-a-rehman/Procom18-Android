<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.osamaabdulrehman.procom18.Activities.CompetitionActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/competitionToolBar"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="8dp"
        app:theme="@style/ToolbarStyle">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/searchEditText"
            android:textColor="#FFFFFF"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:padding="8dp"
            android:drawableRight="@drawable/ic_search_white_24dp"/>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/competitionToolBar"
        android:id="@+id/competitionActivityRecyclerView">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
